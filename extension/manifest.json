{
  "manifest_version": 3,
  "name": "YouTube Watch Tracker",
  "version": "0.3.0",
  "description": "Emits watch events for analytics (foreground/background + tick deltas).",
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:4000/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
